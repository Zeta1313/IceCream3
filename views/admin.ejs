<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="images/ice-cream.png">
    <link rel="stylesheet" href="styles/admin.css">
    <script src="js/ice-cream.js" defer></script>
    <title>Ice Cream Order Form</title>

    <script src="js/ice-cream.js" defer></script>
    <script src ="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
</head>
<body>
    <main>
    <h1>Ice Cream Order Form</h1>
    <table id="order-table" class="display">
        <thead>
            <tr>
                <th>TIME</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>FLAVOR</th>
                <th>TOPPINGS</th>
                <th>COMMENTS</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
            <tr>
                <td><%= order.timestamp %></td>
                <td><%= order.name %></td>
                <td><%= order.email %></td>
                <td><%= order.cone %></td>
                <td><%= order.toppings %></td>
                <td><%= order.comments%></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    </main>
    <script defer>
        let table = new DataTable('#order-table');
    </script>
</body>
</html>