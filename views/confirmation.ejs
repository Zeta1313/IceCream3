<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="images/ice-cream.png">
    <link rel="stylesheet" href="styles/confirmation.css">
    <script src="js/ice-cream.js" defer></script>
    <title>Ice Cream Order Form</title>
</head>
<body>
    <main>
    <% const latest = orders[orders.length - 1]; %>
    <h1>Thank you for your order!</h1>
    <section class="info-section">
      <h2>Personal Information</h2>
      <div class="info-row"><strong>Name:</strong> <span><%= latest.name %></span></div>
      <div class="info-row"><strong>Email:</strong> <span><%= latest.email %></span></div>
    </section>
    <section class="info-section">
      <h2>Order Details</h2>
      <div class="info-row"><strong>Flavor:</strong> <span><%= latest.flavor %></span></div>
      <div class="info-row"><strong>Cone Type:</strong> <span><%= latest.cone %></span></div>
      <div class="info-row toppings-row">
        <strong>Toppings:</strong>
        <div class="toppings">
          <% latest.toppings.forEach(topping => { %>
            <span class="topping"><%= topping %></span>
          <% }); %>
        </div>
      </div>
    </section>
    <h1 class = "button"><a href="/">Place another order</a></h1>
    </main>
    <footer><a href="/admin">Link: Admin Page</a></footer>
</body>
</html>